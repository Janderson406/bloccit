


<%= form_for [topic] do |f| %>
    <% if topic.errors.any? %>
    <!--if there are any validation errors, we display an alert with the number of errors and their messages-->
      <div class="alert alert-danger">
    <!--use the pluralize method to pluralize "error" if there is more than one error-->
        <h4><%= pluralize(topic.errors.count, "error") %>.</h4>
        <ul>
          <% topic.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!--use form_group_tag to display name errors-->
    <%= form_group_tag(topic.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
    <% end %>

    <!--use form_group_tag to display description errors-->
    <%= form_group_tag(topic.errors[:description]) do %>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
    <% end %>

    <div class="form-group">
      <%= f.label :public, class: 'checkbox' do %>
        <%= f.check_box :public %> Public topic
      <% end %>
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
 <% end %>
